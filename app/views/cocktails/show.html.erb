<h1><%=@cocktail.name%></h1>

<% @cocktail.doses.each do |dose| %>
  <%= dose.description %>
  <%= dose.ingredient.name %>
   <%= link_to dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-trash-alt"></i> <% end %>
            <% end %>


<%= link_to "Create dose", new_cocktail_dose_path(@cocktail)  %>

<%= link_to "Back to cocktails", cocktails_path %>
